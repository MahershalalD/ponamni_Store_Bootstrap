<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Wricks-AdminPannel</title>
    <link rel="stylesheet" href="parrupu.css">
<!-- bootstrap -->
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css"
    integrity="sha384-9aIt2nRpC12Uk9gS9baDl411NQApFmC26EwAOH8WgZl5MYYxFfc+NcPb1dKGj7Sk" crossorigin="anonymous">
<script src="https://kit.fontawesome.com/2cf437a4a5.js" crossorigin="anonymous"></script>
</head>
<body >
    <!-- NAVBAR -->

    <nav class="navbar navbar-expand-lg navbar-dark">
        <a class="navbar-brand" href="/"><strong>பொன்மணி_மளிகை</strong></a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarTogglerDemo02"
            aria-controls="navbarTogglerDemo02" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon" style="color: white !important;"></span>
        </button>
    
        <div class="collapse navbar-collapse" id="navbarTogglerDemo02">
            <ul class="navbar-nav ml-auto mt-2 mt-lg-0">
                <li class="nav-item active">
                    <a class="nav-link" href="/kadan">கடன் விவரங்கள்</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/parrupu">புதியனவற்றை சேர்</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="/billing">பில்லிங்</a>
                </li>
            </ul>
        </div>
    </nav>
    <nav class="navbar navbar-expand-lg navbar-light">
            <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
            <li class="nav-item dropdown">
                <form action="/product_select" method="POST">
                    <select id="inputState" class="form-control" name="division_name" onchange='this.form.submit()' >
                        <option selected value="0">வகைகள்</option>
                        <option>பருப்பு வகைகள்</option>
                        <option>அரிசி வகைகள்</option>
                        <option>காய்கறி வகைகள்</option>
                        <option>எண்ணெய் வகைகள்</option>
                        <option>மாட்டு தீவனம் வகைகள்</option>
                        <option>பத்தி & உப்பு வகைகள்</option>
                        <option>இனங்கள் வகைகள்</option>
                        <option>மசாலா வகைகள்</option>
                        <option>துணைக்கருவிகள் வகைகள்</option>
                    </select>
                </form>
            </li>
            <li class="nav-item">
                <a class="nav-link" href=""><h4><%= division %></h4></a>
            </li>
            </ul>
    </nav>
    <!-- ADD NEW -->

    <section>
        
            <div class="container-lg insert-new">
                    <form action="/parrupu_name" method="POST">
                        <div class="row">
                    <div class="col-lg-3">
                        <input type="text" name="product_name" class="form-control" placeholder="பெயர்">
                     </div>
                    <div class="col-lg-3">
                        <button type="submit" class="btn btn-dark">சேர்</button>
                    </div>
                </div>
            </div>
            
        </form>
    </section>

    <!-- LIST_AND_RATE -->

    <div class="container" >
        <div class="row">
            <%  Products.forEach(function(item){ %>
            <div class="col-lg-3" style="margin-left: 30px;padding-bottom: 20px;">
                <div class="par_rate_update " >
                    <div class="par_name">
                        <h6 style="color: black;"><%= item.product_name %></h6>
                        <p><i class="fas fa-seedling"></i><%= item.division_name %></p>
                        <hr style="border: 1px solid white;">
                    </div>
                    <div class="container rate_table">
                        <table>
                            <tr>
                                <th class="amt_table">
                                    <p><i class="fas fa-balance-scale-right"> </i> 1 kg</p>
                                    <p><i class="fas fa-balance-scale-right"> </i> 750 g</p>
                                    <p><i class="fas fa-balance-scale-right"> </i> 500 g</p>
                                    <p><i class="fas fa-balance-scale-right"> </i> 250 g</p>
                                    <p><i class="fas fa-balance-scale-right"> </i> 100 g</p>
                                </th>
                                <th>
                                    <form action="/parrupu" method="POST">
                                    <p><i class="fas fa-rupee-sign"> </i> <input class="rate_update" type="number" step='0.01' pattern="[0-9]*" value="<%= item.one_kg %>" name="rate_o"></p>
                                    <p><i class="fas fa-rupee-sign"> </i> <input class="rate_update" type="number" step='0.01' pattern="[0-9]*" value="<%= item.mukal_kg %>" name="rate_s"></p>
                                    <p><i class="fas fa-rupee-sign"> </i> <input class="rate_update" type="number" step='0.01' pattern="[0-9]*" value="<%= item.arai_kg %>" name="rate_f"></p>
                                    <p><i class="fas fa-rupee-sign"> </i> <input class="rate_update" type="number" step='0.01' pattern="[0-9]*" value="<%= item.kal_kg %>" name="rate_t"></p>
                                    <p><i class="fas fa-rupee-sign"> </i> <input class="rate_update" type="number" step='0.01' pattern="[0-9]*" value="<%= item.nuru_kg %>" name="rate_h"></p>
                                </th>
                            </tr>
                        </table>
                        <button type="submit" style="margin-bottom: 4px;" value="<%= item._id %>" name="UniqueId" class="btn btn-danger btn-large" >விலை
 மாற்று</button>
                        <!-- Button trigger modal --></form>
                    <form action="/remove_product" method="POST">
                        <button  type="submit" name="remo" class="btn btn-primary" value="<%= item._id %>">நீக்குக</button>
                    </form>
                        </div>
                        <!-- Modal -->
                <p class="last_up"><i class="fas fa-history"></i> கடைசி மாற்றம் <%= item.last_updated %></p>
                </div>
            </div>
            <% }) %>
        </div>
    </div>
   

    <script src="https://code.jquery.com/jquery-3.5.1.js" integrity="sha256-QWo7LDvxbWT2tbbQ97B53yJnYU3WhH/C8ycbRAkjPDc="
        crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
        integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
        crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
        integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
        crossorigin="anonymous"></script>
    <script type="text/javascript" src="parrupu.js"></script>
</body>
</html>