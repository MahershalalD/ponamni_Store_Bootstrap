    <!-- ADD NEW -->

    <section>

        <div class="container-lg insert-new">
            <form action="/kadan-new" method="POST">
                <div class="row">
                    <div class="col-lg-3">
                        <input type="text" name="name" class="form-control " placeholder="பெயர்">
                    </div>
                    <div class="col-lg-3">
                        <input type="number" name="Amount" class="form-control " placeholder="தொகை">
                    </div>
                    <div class="col-lg-3">
                        <button type="submit" class="btn btn-dark">சேர்</button>
                    </div>
                </div>
        </div>

        </form>
    </section>

    <!-- LIST_AND_RATE -->

    <div class="container">
        <div class="row">
            <%  Products.forEach(function(item){ %>
            <div class="col-lg-3" style="margin-left: 30px;padding-bottom: 20px;">
                <div class="par_rate_update " style="background-color: #ED4C67;">
                    <div class="par_name">
                        <h6 style="color: black;"><%= item.name %></h6>
                        <hr style="border: 1px solid white;">
                    </div>
                    <div class="container rate_table">
                        <table>
                            <tr>
                                <th class="amt_table">
                                    <p><i class="fas fa-balance-scale-right"> </i>தொகை</p>
                                </th>
                                <th>
                                   <p> <i class="fas fa-rupee-sign">  <%=item.Amount %></p></i>
                                </th>
                            </tr>
                        </table>
                        </form>
                        <!-- Modal -->
                        <form action="/remove_kadan" class="rem" method="POST">
                            <button type="submit" name="remo" class="btn btn-danger remos" value="<%= item._id %>">நீக்குக</button>
